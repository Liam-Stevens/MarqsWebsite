<h3>Your Dashboard</h3>

<%# Table of courses %>
<h5>Courses</h5>
<table>
    <thead>
        <tr>
            <%# Course Name %>
            <th>
                <div class="valign-wrapper">
                    <i class="material-icons">assignment</i>
                    <span style="margin-left: 10px">Course Name</span>
                </div>
            </th>

            <%# Current Grade %>
            <th>
                <div class="valign-wrapper">
                    <i class="material-icons">timeline</i>
                    <span style="margin-left: 10px">Current Grade</span>
                </div>
            </th>

            <%# Button column %>
            <th>
            </th>
        </tr>
    </thead>

    <tbody>
        <%# Insert a row for each enrolled course %>
        <% @courses.each do |course| %>
            <tr>
                <%# Name %>
                <td>
                    <h6><%= course.long_title %></h6>
                </td>

                <%# Current Grade %>
                <td>
                    <h6 style="margin: 0"><b>52 P</b></h6>
                </td>

                <%# View Button %>
                <td class="right">
                    <%= link_to(button_tag("View", class: "grey darken-2 waves-effect waves-light btn"), "#") %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>