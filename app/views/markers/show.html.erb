<h3> Your Dashboard </h3>

<h5>Assigned Courses</h5>
<%# Show message if no comments %>
<% if @courses.empty? %>
    <div style="text-align: center; margin-top: 20%">
        <h6><i>You are not assigned to any courses</i></h6>
    </div>

<%# Table of courses marker is assigned to %>
<% else %>
    <table>
        <thead>
            <tr>
                <%# Course Name %>
                <th>
                    <div class="valign-wrapper">
                        <i class="material-icons">assignment</i>
                        <span style="margin-left: 10px">Course Name</span>
                    </div>
                </th>

                <%# Number of Students %>
                <th>
                    <div class="valign-wrapper">
                        <i class="material-icons">supervisor_account</i>
                        <span style="margin-left: 10px">Students Enrolled</span>
                    </div>
                </th>

                <%# View button %>
                <th>
                </th>
            </tr>
        </thead>

        <tbody>
            <% @courses.each do |course| %>
                <tr>
                    <%# Course name %>
                    <td>
                        <h6><%= course.long_title %></h6>
                    </td>

                    <%# Student count %>
                    <td>
                        <h6><%= course.students.count %></h6>
                    </td>

                    <%# View button %>
                    <td class="right">
                        <%= link_to(button_tag("View", class: "grey darken-2 waves-effect waves-light btn"), marker_course_path(@logged_in_user, course)) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>