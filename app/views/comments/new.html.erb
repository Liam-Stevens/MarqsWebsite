<%# Headings %>
<h3 style="margin-bottom: 0"> <%= "Add comment to a#{@student.id}'s submission" %> </h3>
<h5 style="margin-bottom: 1.4em"> <%= @assignment.title %> </h5>

<%= form_with(url: marker_course_assignment_submission_comments_path(session[:id], params[:course_id], params[:assignment_id], @submission), id: "comment-form") do %>
    <%# Comment input %>
    <div class="input-field">
        <%= label_tag(:text, "Comment") %>
        <%= text_field_tag(:text, nil, required: true, class: "validate") %>
    </div>

    <%= submit_tag("Add Comment", class: "grey darken-2 btn") %>
<% end %>