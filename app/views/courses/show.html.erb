<h2> <%= @course.long_title %> </h2>

<table class="striped">
    <thead>
        <tr style="">
            <th> <i class="material-icons">assignment</i>   Assignments </th>
            <th> <i class="material-icons">access_time</i>    Due Date </th>
            <th> <i class="material-icons">pie_chart</i>     Weighting </th>
            <th> <i class="material-icons">assessment</i>     Marks </th>
        </tr>
    </thead>
    <tbody>
        <% @assignments.each do |assignment| %>
            <tr>
                <td> <%= assignment.title %> </td>
                <td> <%= assignment.due_date %> </td>
                <td> <%= (assignment.weighting*100).to_i %> % </td>
                <td> <%= assignment.max_points %> </td>
            </tr>
        <% end %>
    </tbody>

</table>