<%# Assignment Form %>
<% elsif @type == "assignment" %>
  <%= form_with(url: admin_index_path, id: "assignment-form") do |f| %>
    <div class="input-field">
      <%= label_tag("Title", "Title") %>
      <%= text_field_tag("Title", nil, class: "validate", required: true) %>
    </div>
