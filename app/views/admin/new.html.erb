    </div>
    <div class="input-field">
      <%= label_tag("Weighting", "Weighting") %>
      <%= number_field_tag("Weighting", nil, class: "validate", min: 0, max: 1, step: 0.01, required: true) %>
    </div>
    <div class="input-field">
