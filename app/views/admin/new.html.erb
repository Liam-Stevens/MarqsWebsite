      <%= number_field_tag("Max_points", nil, class: "validate", min: 0, required: true) %>
    </div>
    <%# Course %>
    <div class="input-field">
      <%= label_tag("Course_id", "Course ID") %>
      <%= text_field_tag("Course_id", nil, class: "validate", required: true) %>
    </div>

    <%= submit_tag("Add Assignment", class: "grey darken-2 btn") %>
  <% end %>

<% end %>

